{
  "compilerOptions": {
    /* dirs */
    "rootDir": ".",
    "types": ["node"],
    /* module config */
    "target": "esnext",
    "lib": ["es2020", "es2022.error"],
    "module": "nodenext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    /* behaviour options */
    "allowJs": true,
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "exclude": ["node_modules", "lib", "dist", "test"]
}
